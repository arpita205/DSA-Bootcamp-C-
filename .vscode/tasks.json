{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "\"${file}\"", 
        "-o",
        "\"${fileDirname}\\${fileBasenameNoExtension}.exe\""
      ],
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "compile and run",
      "type": "shell",
      "command": "\"${fileDirname}\\${fileBasenameNoExtension}.exe\"",
      "dependsOn": "compile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
